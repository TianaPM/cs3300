<p id="notice"><%= notice %></p>

<h1>Projects</h1>

<% if student_signed_in? %>
    <li><%= link_to "Logout", destroy_student_session_path, method: :delete %></li>
    <li><%= link_to current_student.email, edit_student_registration_path %></li>
    
<% else %>
    <li><%= link_to "Sign Up", new_student_registration_path %></li>
    <li><%= link_to "Login", new_student_session_path %></li>
<% end %>


<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= project.title %></td>
        <td><%= project.description %></td>
        <td><%= link_to 'Show', project %></td>
        <td><%= link_to 'Edit', edit_project_path(project) %></td>
        <td><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Project', new_project_path %>
